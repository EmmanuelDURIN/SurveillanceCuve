<Window x:Class="WindowCuve"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SurveillanceCuve"
        mc:Ignorable="d"
        Title="Création d'une cuve" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <local:UserControlEditionCuve HorizontalAlignment="Center" Margin="0,20,0,0"/>

        <!--le DockPanel sait mettre des controles sur les côtés-->
        <DockPanel Grid.Row="1">
            <Button x:Name="buttonCancel" Content="Cancel" Margin="10,10" Width="100" DockPanel.Dock="Right" />
            <Button x:Name="buttonOk" Content="Ok" Margin="10,10" Width="100" DockPanel.Dock="Right"  />
        </DockPanel>
    </Grid>
</Window>
